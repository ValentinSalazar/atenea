<style>
   .wrapper::-webkit-scrollbar {
    display: none;
   }
</style>

<script>
    // Seleccionar todos los elementos con la clase .wrapper
    const wrappers = document.querySelectorAll<HTMLElement>('.wrapper');

    // Iterar sobre cada elemento y agregar los event listeners
    wrappers.forEach(wrapper => {
        let isDragging = false;
        let startX;

        wrapper.addEventListener('mousedown', (e) => {
            isDragging = true;
            startX = e.pageX - wrapper.offsetLeft;
        });

        wrapper.addEventListener('mouseup', () => {
            isDragging = false;
        });

        wrapper.addEventListener('mousemove', (e) => {
            if (!isDragging) return;
            e.preventDefault();
            const x = e.pageX - wrapper.offsetLeft;
            const walk = (x - startX) * 2; // Adjust scroll speed if necessary
            wrapper.scrollLeft -= walk;
            startX = x;
        });
    });
</script>